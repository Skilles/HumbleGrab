<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>HumbleGrabber</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Config.Net" Version="5.1.0" />
      <PackageReference Include="Config.Net.Yaml" Version="5.1.0" />
    </ItemGroup>

    <ItemGroup>
      <None Update="config.yaml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Remove="HumbleGrab.Humble\**" />
      <None Remove="HumbleGrab.Steam\**" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="HumbleGrab.Humble\**" />
      <Compile Remove="HumbleGrab.Steam\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="HumbleGrab.Humble\**" />
      <EmbeddedResource Remove="HumbleGrab.Steam\**" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="HumbleGrab.Humble\HumbleGrab.Humble.csproj" />
      <ProjectReference Include="HumbleGrab.Steam\HumbleGrab.Steam.csproj" />
    </ItemGroup>

</Project>
